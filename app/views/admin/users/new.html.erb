<h1>Registrar Nuevo Usuario</h1>

<%= form_for @user, url: admin_users_path do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :role %>
    <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] } %>
  </div>

  <div>
    <%= f.submit "Crear Usuario" %>
  </div>
<% end %>
